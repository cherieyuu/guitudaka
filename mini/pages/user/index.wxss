/* pages/user/index.wxss */
page{
	background-color: #E7F1FC;
	width: 750rpx;
}

.user{
	position: relative;
	padding: 50rpx 20rpx;
	overflow: hidden;
}

.user-avatar-container{
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.user-avatar{
	margin: 0 auto;
	text-align: center;
	width: 300rpx;
	height: 300rpx;
	border-radius: 50%;
}

.user-name {
	text-align: center;
	color: #FFF;
	font-size: 36rpx;
	margin: 10rpx 0 20rpx 0;
}

@keyframes rotate {
	from{transform: rotate(0deg);}
	to{transform: rotate(359deg);}
}

.wave-container {
	position: absolute;
	top: -680rpx;
	left: -350rpx;
	width: 1500rpx;
	height: 1500rpx;
	background-color: rgb(41, 118, 121);
	border-radius: 40%;
	animation: rotate 8s linear infinite;
	z-index: -1;
}

.user-context {
	margin-top: 15%;
	margin-left: 30rpx;
}

.user-context view {
	width: 50%;
	background-color: rgb(41, 118, 121);
	border-radius: 36rpx;
	color: #FFF;
	margin-top: 30rpx;
	padding: 10rpx 30rpx;
	font-size: 36rpx;
}

.gray-bg {
	background-color: rgba(165, 154, 154, 0.267)!important;
}

.chart-container {
	width: 80%;
	height: 416rpx;
	margin: 0 auto;
}