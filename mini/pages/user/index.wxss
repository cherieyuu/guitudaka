/* pages/user/index.wxss */
page{
    background-color: #E7F1FC;
}
.user{
	position: relative;
    padding: 50rpx 20rpx;
}

.user-avatar-container{
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.user-avatar{
	margin: 0 auto;
	text-align: center;
	width: 300rpx;
	height: 300rpx;
	border-radius: 50%;
}

.user-name {
	text-align: center;
	color: #FFF;
	font-size: 36rpx;
	margin: 30rpx 0 0 0;
}

@keyframes rotate {
	from{transform: rotate(0deg);}
	to{transform: rotate(359deg);}
}

.wave-container {
	position: absolute;
	top: -1000rpx;
	left: -350rpx;
	width: 1500rpx;
	height: 1500rpx;
	background-color: rgb(41, 118, 121);
	border-radius: 40%;
	animation: rotate 8s linear infinite;
	z-index: -1;
}

.user-context {
	margin-top: 40%;
	margin-left: 30rpx;
}

.user-context view {
	width: 50%;
	background-color: rgb(41, 118, 121);
	border-radius: 36rpx;
	color: #FFF;
	margin-top: 30rpx;
	padding: 10rpx 30rpx;
	font-size: 36rpx;
}